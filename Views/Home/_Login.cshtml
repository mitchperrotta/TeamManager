@model LoginUser

<form action="/login" method="post" class="col-5">
    <h2 class="text-center">Login</h2>
    <div class="form-group">
        <label asp-for="LoginUsername"></label>
        <input asp-for="LoginUsername" class="form-control">
        <span class="text-danger" asp-validation-for="LoginUsername"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword" class="form-control">
        <span class="text-danger" asp-validation-for="LoginPassword"></span>
    </div>
    <input type="submit" value="Login" class="btn btn-success btn-outline-primary">
</form>